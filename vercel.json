{
  "version": 2,
  "builds": [
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "workDirectory": "frontend"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(reservas|destinos|clientes|importar)(.*)",
      "dest": "/backend/app/main.py"
    },
    {
      "source": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ]
}